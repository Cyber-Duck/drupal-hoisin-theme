{#
/**
 * @file
 * Theme override for a views mini-pager.
 *
 * Available variables:
 * - items: List of pager items.
 *
 * @see template_preprocess_views_mini_pager()
 */
#}
{% if items.previous or items.next %}
    <div class="container">
        <nav class="pager" role="navigation" aria-label="Pagination">
            <ul class="pager__items js-pager__items">
                {% if items.previous %}
                <li class="pager__item">
                    <a href="{{ items.previous.href }}" aria-label="{{ 'Go to previous page'|t }}" rel="prev" {{ items.previous.attributes|without('href', 'title', 'rel') }}>{{ items.previous.text|default('‹‹'|t) }}</a>
                </li>
                {% endif %}
                {% if items.current %}
                <li class="pager__item">
                    {% trans %}
                    Page
                    {{ items.current }}
                    {% endtrans %}
                </li>
                {% endif %}
                {% if items.next %}
                <li class="pager__item">
                    <a href="{{ items.next.href }}" aria-label="{{ 'Go to next page'|t }}" rel="next" {{ items.next.attributes|without('href', 'title', 'rel') }}>{{ items.next.text|default('››'|t) }}</a>
                </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
</div>
